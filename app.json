{
  "expo": {
    "name": "智慧倉儲系統APP",
    "version": "1.1.31",
    "android": {
      "package": "com.ibiza.wms",
      "versionCode": 22,
      "permissions": [
        "CAMERA"
      ]
    },
    "platforms": [
      "ios",
      "android"
    ],
    "icon": "./assets/icon.png",
    "slug": "ibiza_wms",
    "loading": {
      "hideExponentText": true,
      "backgroundImage": "./assets/splashscreen.png"
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.ibiza.wms",
      "icon": "./assets/icon-ios.png",
      "infoPlist": {
        "NSCameraUsageDescription": "使用您的相機來掃描Barcode或是QRCODE"
      }
    },
    "androidStatusBarColor": "#334393",
    "androidStatusBar": {
      "barStyle": "light-content",
      "backgroundColor": "#334393",
    }
  }
}

