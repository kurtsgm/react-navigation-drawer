{
  "expo": {
    "name": "SDJ智慧倉儲系統",
    "version": "1.2.0",
    "android": {
      "package": "com.ibiza.sdj",
      "versionCode": 30,
      "permissions": [
        "CAMERA"
      ]
    },
    "platforms": [
      "ios",
      "android"
    ],
    "icon": "./assets/icon.png",
    "slug": "ibiza_sdj",
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.ibiza.sdj",
      "icon": "./assets/icon-ios.png",
      "infoPlist": {
        "NSCameraUsageDescription": "使用您的相機來掃描Barcode或是QRCODE"
      }
    },
    "androidStatusBar": {
      "barStyle": "light-content",
      "backgroundColor": "#334393"
    }
  }
}

